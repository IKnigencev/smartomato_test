<hr class="w-48 h-1 mx-auto my-4 bg-gray-100 border-0 rounded md:my-10 dark:bg-gray-700">

<dl class="max-w-md text-gray-900 divide-y divide-gray-200 dark:text-white dark:divide-gray-700">
    <div class="flex flex-col pb-3">
        <dt class="mb-1 text-gray-500 md:text-lg dark:text-gray-400">Название товара</dt>
        <dd class="text-lg font-semibold"><%= order_line.name %></dd>
    </div>
    <div class="flex flex-col py-3">
        <dt class="mb-1 text-gray-500 md:text-lg dark:text-gray-400">Стоимость товара</dt>
        <dd class="text-lg font-semibold"><%= order_line.cost.to_f %></dd>
    </div>
    <div class="flex flex-col pt-3">
        <dt class="mb-1 text-gray-500 md:text-lg dark:text-gray-400">Количество товаров</dt>
        <dd class="text-lg font-semibold"><%= order_line.count %></dd>
    </div>
    <div class="flex flex-col pt-3">
        <dt class="mb-1 text-gray-500 md:text-lg dark:text-gray-400">Общая стоимость товаров</dt>
        <dd class="text-lg font-semibold"><%= order_line.total %></dd>
    </div>
</dl>
