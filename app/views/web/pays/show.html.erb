<h1 class="text-4xl font-bold tracking-tight text-gray-900" style="margin-bottom: 20px;">Мокнутая страница сбера</h1>

<%= link_to "Положительный коллбек", @success_url, params: @params_for_redirect[:success], class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
<%= link_to "Отрицательный коллбек", @failure_url, params: @params_for_redirect[:failure], class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
<%= link_to "Просто назад к странице заказа", web_order_path(@order.id), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
